  "threat_categories": [
    {
      "id": "phishing",
      "name": "Phishing / Credential Harvesting",
      "severity_default": "high",
      "weights": { "keyword": 6, "regex": 8, "url": 10, "form": 9, "header": 7 },
      "signals": {
        "keywords": [
          "verify your account","update your password","confirm your identity","suspicious login attempt","unusual activity","account suspended","account locked",
          "security verification","click the secure link","login to avoid deactivation","password expiry","two-factor reset","confirm billing information",
          "document pending signature","docusign document","shared file requires login","your invoice is ready","new voicemail message"
        ],
        "regex_patterns": [
          "(?i)\\bverify (?:your|the) (?:account|identity)\\b",
          "(?i)\\blog(?:in|on) (?:now|immediately|to (?:keep|avoid|prevent))\\b",
          "(?i)\\b(account|service) (?:suspended|locked|disabled)\\b",
          "(?i)\\b(unusual|suspicious) (?:sign[- ]?in|activity)\\b",
          "(?i)\\b2fa|two[- ]factor (?:reset|disabled)\\b",
          "(?i)\\bupdate (?:payment|billing) details\\b"
        ],
        "url_indicators": {
          "regex": [
            "(?i)https?:\\/\\/[^\\s]*\\.(?:security|update|verify|login|auth|customer|support)[^\\s]*",
            "(?i)https?:\\/\\/[^\\s]*-(?:secure|verify|auth|login)[^\\s]*",
            "(?i)https?:\\/\\/(?:[^\\s]*\\.)?(?:microsoftsecure|paypa1|g00gle|faceb00k|amaz0n)[^\\s]*",
            "(?i)https?:\\/\\/[^\\s]*\\.(?:zip|mov|xyz|top|click|link|help|support)(?:\\/|$)",
            "(?i)https?:\\/\\/(?:[^\\s]*\\.)?(?:bit\\.ly|tinyurl\\.com|t\\.co|is\\.gd|cutt\\.ly|rebrand\\.ly)\\/[A-Za-z0-9]+"
          ],
          "suspicious_tlds_override": ["zip","mov","xyz","top","click","help","support","link","lol"],
          "weight": 10
        },
        "form_indicators": {
          "field_names_like": [
            "password","passcode","otp","one_time_code","security_code","2fa","cvv","ssn","tax_file_number","tfn","driver_licence","medicare","credit_card","card_number","expiry","routing","account_number",
            "mygov","ato","netbank","token","seed","seed_phrase","recovery_phrase"
          ],
          "weight": 9
        },
        "header_indicators": {
          "email_like_headers": [
            "reply-to != from domain","spf=fail","dkim=fail","dmarc=fail","return-path mismatch"
          ],
          "weight": 7
        }
      }
    },
